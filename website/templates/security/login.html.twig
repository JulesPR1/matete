{% extends 'base.html.twig' %}

{% block body %}
<div class='center card' style='width:20%;margin-top:2%'>
<div class='card-body'>
<form method="post">
    {% if error %}
        <div style='text-align:left'class="alert alert-dismissible alert-danger">Mot de passe et / ou adresse email incorrect<a type="button" class="btn-close" data-bs-dismiss="alert" style='position:absolute;right:3%;top:13%'><i class='uil uil-times'></i></a></div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté(e) en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 card-title">Connexion</h1>
    <input class='form-control' type="email" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
    <br>
    <input class='form-control' type="password" placeholder="Mot de passe" name="password" id="inputPassword" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <br><button class="btn btn-lg btn-outline-primary mt-1" type="submit">
        Se connecter
    </button>
</form>
</div>
</div>
{% endblock %}
